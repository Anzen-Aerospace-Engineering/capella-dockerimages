# Autostart script for OpenBox

export PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

if [ "$AUTOSTART_PAPYRUS" = "1" ];
then
    if [ "$RESTART_PAPYRUS" = "1" ];
    then
        # Restart Papyrus automatically
        ( while true; do /opt/Papyrus/papyrus -data ${WORKSPACE_DIR} > /var/log/papyrus.stdout.log 2> /var/log/papyrus.stderr.log; sleep 1; done ) &
    else
        /opt/Papyrus/papyrus -data ${WORKSPACE_DIR} > /var/log/papyrus.stdout.log 2> /var/log/papyrus.stderr.log &
    fi
fi
